<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800" prefWidth="900" styleClass="main-container" stylesheets="@../../../styles/dashboard/booksManagement.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yb.digilib.Controllers.Layout.BooksManagementController">

    <!-- Page title -->
    <Text layoutX="20.0" layoutY="30.0" styleClass="page-title" text="Books Management" />

    <!-- Search bar at the top -->
    <HBox layoutX="20.0" layoutY="70.0" spacing="10.0" styleClass="search_bar" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="70.0">
        <TextField fx:id="searchField" promptText="Rechercher un livre..." styleClass="search-bar" HBox.hgrow="ALWAYS" />
        <Button fx:id="searchButton" styleClass="button-primary">
            <graphic>
                <FontAwesomeIconView glyphName="SEARCH" size="20.0" styleClass="icon" />
            </graphic>
        </Button>
    </HBox>

    <!-- Data table in the center -->
    <TableView fx:id="booksTable" layoutX="20.0" layoutY="130.0" prefHeight="600.0" prefWidth="860.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="130.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Titre" />
            <TableColumn fx:id="authorColumn" prefWidth="200.0" text="Auteur" />
            <TableColumn fx:id="genreColumn" prefWidth="150.0" text="Genre" />
            <TableColumn fx:id="yearColumn" prefWidth="100.0" text="Année" />
            <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Quantité" />
        </columns>
    </TableView>


    <!-- Action buttons at the bottom -->
    <HBox layoutX="20.0" layoutY="740.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <Button fx:id="addButton" prefWidth="120.0" styleClass="button-primary" text="Add">
            <graphic>
                <FontAwesomeIconView glyphName="PLUS" size="20.0" styleClass="icon" />
            </graphic>
        </Button>
        <Button fx:id="editButton" prefWidth="120.0" styleClass="button-primary" text="Edit">
            <graphic>
                <FontAwesomeIconView glyphName="EDIT" size="20.0" styleClass="icon" />
            </graphic>
        </Button>
        <Button fx:id="deleteButton" prefWidth="120.0" styleClass="button-destructive" text="Delete">
            <graphic>
                <FontAwesomeIconView glyphName="TRASH" size="20.0" styleClass="icon" />
            </graphic>
        </Button>
    </HBox>
</AnchorPane>
