<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800" prefWidth="900" styleClass="main-container" stylesheets="@../../../styles/global.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yb.digilib.Controllers.Layout.MembersManagementController">

    <!-- Page title -->
    <Text layoutX="20.0" layoutY="30.0" styleClass="page-title" text="Gestion de membres" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="40.0" />

    <!-- Search bar at the top -->
    <HBox layoutX="20.0" layoutY="70.0" spacing="10.0" styleClass="search_bar" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="110.0">
        <TextField fx:id="searchField" promptText="Rechercher un membre..." styleClass="search-bar" HBox.hgrow="ALWAYS" />
        <Button fx:id="searchButton" styleClass="search-button">
            <graphic>
                <FontAwesomeIconView glyphName="SEARCH" size="20.0" styleClass="icon" />
            </graphic>
        </Button>
    </HBox>

    <!-- Data table in the center -->
    <TableView fx:id="membersTable" layoutX="20.0" layoutY="130.0" prefHeight="560.0" prefWidth="860.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="160.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Nom" />
            <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="Téléphone" />
            <TableColumn fx:id="addressColumn" prefWidth="250.0" text="Adresse" />
        </columns>
    </TableView>

    <!-- Action buttons at the bottom -->
    <HBox layoutX="20.0" layoutY="740.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <Button fx:id="addButton" prefWidth="120.0" styleClass="button-primary" text="Ajouter">
            <graphic>
                <FontAwesomeIconView glyphName="PLUS" size="20.0" styleClass="icon" />
            </graphic>
        </Button>
        <Button fx:id="editButton" prefWidth="120.0" styleClass="button-primary" text="Modifier">
            <graphic>
                <FontAwesomeIconView glyphName="EDIT" size="20.0" styleClass="icon" />
            </graphic>
        </Button>
        <Button fx:id="deleteButton" prefWidth="120.0" styleClass="button-destructive" text="Supprimer">
            <graphic>
                <FontAwesomeIconView glyphName="TRASH" size="20.0" styleClass="icon" />
            </graphic>
        </Button>
    </HBox>
</AnchorPane>
